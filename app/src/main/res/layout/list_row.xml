<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/imgLayout"
        android:padding="3dp"
        android:layout_alignParentLeft="true"
        android:background="#f0212121"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_image"
            android:layout_margin="1dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iii"/>


    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:text="The alchemist"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#e4e4e4"
        android:layout_toRightOf="@+id/imgLayout"
        android:layout_alignTop="@+id/imgLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/author"
        android:layout_below="@+id/title"
        android:text="Ryhmes with the Busta'"
        android:textColor="#e8cfcfcf"
        android:layout_marginTop="2dp"

        android:layout_toRightOf="@+id/imgLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bpm"
        android:text="233 before pages"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/title"
        android:layout_marginRight="10dp"
        android:textColor="#e8cfcfcf"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@android:drawable/ic_media_play"

        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpm"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />



</RelativeLayout>